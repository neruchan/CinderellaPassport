<body>

<#INCLUDE header.template#>


<div id="container">

<#INCLUDE navigation.template#>

<div class="clearfix"></div>

<!--table of content start-->
<div id="title02">店舗投稿画面</div>
<p class="border-btm"></p>

<p class="red">※ は必須項目です。</p>
<form action="" method="post"  enctype="multipart/form-data" id="add_form" name="add_form">
<table width="930" border="0" cellspacing="2" cellpadding="3" id="center">
<tr>
<td width="110" class="title-tbl02">店舗名 <span class="red">※</span></td>
<td><input type="text" class="form01" name="name" value="<#PRINT name#>"/><br />
<#PRINT name_err#>
</td>
</tr>

<tr>
<td class="title-tbl02">都道府県 <span class="red">※</span></td>
<td>
<select name="todoufukens">
<option value="">-</option>
<#PRINT todoufukens#>
</select>
</td>
</tr>
<tr>
<td class="title-tbl02">郵便番号 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="zip" value="<#PRINT zip#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">住所 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="address" value="<#PRINT address#>" />
</td>
</tr>


<tr>
<td class="title-tbl02">最寄駅 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="eki" value="<#PRINT eki#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">アクセス <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="access" value="<#PRINT access#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">営業時間 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="eigyo_jikan" value="<#PRINT eigyo_jikan#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">定休日 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="holiday" value="<#PRINT holiday#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">メールアドレス <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="email" value="<#PRINT email#>" />
<#PRINT email_err#>
</td>
</tr>

<tr>
<td class="title-tbl02">電話番号 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="phone" value="<#PRINT phone#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">平均価格 <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="average_price" value="<#PRINT average_price#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">サイト <span class="red">※</span></td>
<td>
<input type="text" class="form01" name="shop_website" value="<#PRINT shop_website#>" />
</td>
</tr>

<tr>
<td class="title-tbl02">詳細 <span class="red">※</span></td>
<td>
<textarea class="form04" rows="" cols="" id="contents" name="shop_details"><#PRINT shop_details#></textarea>
</td>
</tr>

<tr>
<td class="title-tbl02">画像 <span class="red">※</span></td>
<td><input type="file" class="form03b" name="article_img1"/>
<br>
<#PRINT article_img1_err#>
</td>
</tr>

<tr>
<td class="title-tbl02">画像 <span class="red">※</span></td>
<td><input type="file" class="form03b" name="article_img2"/>
<br>
<#PRINT article_img2_err#>
</td>
</tr>

<tr>
<td class="title-tbl02">画像 <span class="red">※</span></td>
<td><input type="file" class="form03b" name="article_img3"/>
<br>
<#PRINT article_img3_err#>
</td>
</tr>


</table>
<input type="hidden" name="add_flag" value="add_flag"/>
<input type="hidden" name="up_img1" value="<#PRINT up_img1#>"/>
<input type="hidden" name="up_img2" value="<#PRINT up_img2#>"/>
<input type="hidden" name="up_img3" value="<#PRINT up_img3#>"/>
</form>
<div id="line" align="center">
<a href="javascript:void(0)" id="add_btn"><input type="button" class="space02" value="内容を確認" /></a>
</div>

<!--end of table-->


</div>
